{
    "name": "generator-mht",
    "version": "1.0.1",
    "description": "All kinds of starter templates I need including CI/CD workflows for gitlab-ci and circleci.",
    "keywords": [
        "yeoman-generator",
        "template",
        "ci",
        "gitlab-ci",
        "circleci"
    ],
    "author": "Michael Hettmer",
    "license": "MIT",
    "homepage": "https://github.com/MichaelHettmer/generator-mht#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MichaelHettmer/generator-mht.git"
    },
    "bugs": {
        "url": "https://github.com/MichaelHettmer/generator-mht/issues"
    },
    "main": "generators/app/index.js",
    "scripts": {
        "copy": "rimraf \"generators/**/templates\" && copyfiles --all --up 2 \"src/generators/**/templates/**/*\" generators",
        "build:ts": "tsc",
        "build": "npm-run-all build:ts copy",
        "build:watch": "chokidar --initial --verbose \"src/**/*\" -c \"npm run build\"",
        "link": "npm link",
        "start": "npm run build && npm link && yo mht",
        "lint": "eslint . --ext '.js,.jsx,.ts,.tsx,.json,.jsonc'",
        "lint:ci": "yarn lint --format junit --output-file ./reports/eslint/results.xml",
        "lint:fix": "yarn lint --fix",
        "commitlint": "commitlint",
        "commitlint:ci": "commitlint-circle",
        "test": "jest",
        "test:coverage": "yarn test --coverage --watchAll=false",
        "test:ci": "CI=true JEST_JUNIT_OUTPUT_DIR=./reports/jest JEST_JUNIT_OUTPUT_NAME=results.xml yarn test:coverage --runInBand --reporters=\"default\" --reporters=\"jest-junit\"",
        "validate": "npm-run-all lint test"
    },
    "dependencies": {
        "lodash.kebabcase": "4.1.1",
        "yeoman-environment": "^2.7.0",
        "yeoman-generator": "4.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@semantic-release/changelog": "5.0.0",
        "@semantic-release/git": "9.0.0",
        "@types/jest": "25.1.2",
        "@types/lodash.kebabcase": "4.1.6",
        "@types/yeoman-environment": "^2.3.2",
        "@types/yeoman-generator": "3.1.4",
        "@types/yeoman-test": "2.0.3",
        "@typescript-eslint/eslint-plugin": "2.19.0",
        "@typescript-eslint/parser": "2.19.0",
        "chokidar-cli": "^2.1.0",
        "commitlint-circle": "1.0.0",
        "copyfiles": "2.2.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-json": "2.0.1",
        "eslint-plugin-prettier": "3.1.2",
        "husky": "4.2.1",
        "jest": "25.1.0",
        "jest-junit": "10.0.0",
        "jest-mock-console": "1.0.0",
        "lint-staged": "10.0.7",
        "npm-run-all": "4.1.5",
        "prettier": "1.19.1",
        "rimraf": "3.0.1",
        "semantic-release": "17.0.2",
        "ts-jest": "25.2.0",
        "typescript": "3.7.5",
        "yeoman-test": "2.1.0",
        "yo": "3.1.1"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "files": [
        "/generators",
        "/npm-shrinkwrap.json"
    ]
}
