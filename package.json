{
    "name": "generator-mht",
    "version": "1.8.5",
    "description": "Battle-tested configurations and setups meet personal preference and the laziness of a programmer.",
    "keywords": [
        "yeoman-generator",
        "template",
        "ci",
        "gitlab-ci",
        "circleci"
    ],
    "author": "Michael Hettmer",
    "license": "MIT",
    "homepage": "https://github.com/MichaelHettmer/generator-mht#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MichaelHettmer/generator-mht.git"
    },
    "bugs": {
        "url": "https://github.com/MichaelHettmer/generator-mht/issues"
    },
    "main": "generators/app/index.js",
    "scripts": {
        "copy": "rimraf \"generators/**/templates\" && copyfiles --all --up 2 \"src/generators/**/templates/**/*\" generators",
        "build:ts": "tsc",
        "build": "npm-run-all build:ts copy",
        "build:watch": "chokidar --initial --verbose \"src/**/*\" -c \"npm run build\"",
        "link": "npm link",
        "start": "npm run build && npm link && yo mht",
        "lint": "eslint . --ext '.js,.jsx,.ts,.tsx,.json,.jsonc'",
        "lint:circleci": "docker run -w /data --rm -v $(pwd):/data circleci/circleci-cli:0.1.6949-alpine config validate",
        "lint:ejs": "ejslint src/**/templates/**/*",
        "lint:ci": "npm run lint -- --format junit --output-file ./reports/eslint/results.xml",
        "lint:fix": "npm run lint -- --fix",
        "commitlint": "commitlint",
        "commitlint:ci": "commitlint-circle",
        "test": "jest",
        "test:coverage": "npm run test -- --coverage --watchAll=false",
        "test:ci": "CI=true JEST_JUNIT_OUTPUT_DIR=./reports/jest JEST_JUNIT_OUTPUT_NAME=results.xml npm run test:coverage -- --runInBand --reporters=\"default\" --reporters=\"jest-junit\"",
        "validate": "npm-run-all lint lint:circleci lint:ejs test"
    },
    "dependencies": {
        "axios": "0.19.2",
        "chalk": "4.1.0",
        "deepmerge": "4.2.2",
        "dotenv": "8.2.0",
        "find-config": "1.0.0",
        "findup-sync": "4.0.0",
        "lodash.kebabcase": "4.1.1",
        "lodash.startcase": "4.4.0",
        "table": "5.4.6",
        "yeoman-environment": "2.8.1",
        "yeoman-generator": "4.10.1",
        "yeoman-merge-ui": "1.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/git": "9.0.0",
        "@types/findup-sync": "2.0.2",
        "@types/fs-extra": "9.0.1",
        "@types/jest": "26.0.3",
        "@types/lodash.kebabcase": "4.1.6",
        "@types/lodash.startcase": "4.4.6",
        "@types/table": "5.0.0",
        "@types/yeoman-assert": "3.1.1",
        "@types/yeoman-environment": "2.3.3",
        "@types/yeoman-generator": "3.1.4",
        "@types/yeoman-test": "2.0.4",
        "@typescript-eslint/eslint-plugin": "2.34.0",
        "@typescript-eslint/parser": "2.34.0",
        "chokidar-cli": "2.1.0",
        "commitlint-circle": "1.0.0",
        "copyfiles": "2.3.0",
        "ejs-lint": "1.1.0",
        "eslint": "7.3.1",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-ejs": "0.0.2",
        "eslint-plugin-json": "2.1.1",
        "eslint-plugin-prettier": "3.1.4",
        "fs-extra": "9.0.1",
        "husky": "4.2.5",
        "jest": "26.1.0",
        "jest-junit": "11.0.1",
        "jest-mock-console": "1.0.1",
        "lint-staged": "10.2.11",
        "npm-run-all": "4.1.5",
        "prettier": "2.0.5",
        "rimraf": "3.0.2",
        "semantic-release": "17.1.1",
        "ts-jest": "26.1.1",
        "typescript": "3.9.5",
        "yeoman-assert": "3.1.1",
        "yeoman-test": "2.6.0",
        "yo": "3.1.1"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "files": [
        "/generators",
        "/npm-shrinkwrap.json"
    ]
}
